<h1> List of All Products </h1> 

<table>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product) %></td>
      <td><%= button_to 'Edit', edit_product_path(product), method: 'get'%></td>
      <td><%= button_to 'Remove', product_path(product), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<br/> 
<%= link_to "Add a New Product", new_product_path %>
